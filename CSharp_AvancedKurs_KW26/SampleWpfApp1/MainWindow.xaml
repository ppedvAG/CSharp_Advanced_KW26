<Window x:Class="SampleWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="44,44,0,0" VerticalAlignment="Top" Height="55" Width="148" Click="Button_Click"/>
        <ListBox HorizontalAlignment="Left" Height="111" Margin="102,247,0,0" VerticalAlignment="Top" Width="348" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="102,148,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="348" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
